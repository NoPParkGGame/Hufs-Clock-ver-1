{
    "manifest_version": 3,
    "name": "HUFS 종강시계 v2",
    "version": "1.0.1",
    "description": "한국외대 종강/개강까지 남은 시간을 보여주는 확장 프로그램입니다.",
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "HUFS 종강시계 열기"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "nativeMessaging"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "chrome_url_overrides": {
        "newtab": "popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": ["images/*", "css/*", "popup.html"],
            "matches": ["<all_urls>"]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; script-src-elem 'self'; object-src 'self'; style-src 'self' https://fonts.googleapis.com; img-src 'self' data: https://*;"
    }
}


